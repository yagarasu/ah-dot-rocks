    {
      tagData.banner && (
        <Image
          src={tagData.banner}
          alt={getByLocale("es", tagData.label, "es")}
          class="w-full object-cover max-h-96"
        />
      )
    }
    <div class="flex flex-row items-center m-4">
      <h1 class="text-4xl text-rose-600 flex-grow">
        {getByLocale("es", tagData.label, "es")}
      </h1>
      <div class="text-slate-400">Posts en esta etiqueta: {count}</div>
    </div>
  </div>
  <div class="flex flex-col md:flex-row gap-4 max-w-7xl mx-auto">
